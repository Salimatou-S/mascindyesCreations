{% extends 'mascindye.html.twig' %}

{% block title %}Reset your password
{% endblock %}

{% block body %}
	{% for flash_error in app.flashes('reset_password_error') %}
		<div class="alert alert-danger" role="alert">{{ flash_error }}</div>
	{% endfor %}
	<main class="mb-4">
		<div class="container px-4 px-lg-5">
			<div class="row gx-4 gx-lg-5 justify-content-center">
				<div class="col-md-10 col-lg-8 col-xl-7">
					<div class="my-5">
						<h1>Réinitialisez votre mot de passe</h1>
						<div>
							<small>
								Vous avez oublié votre mot de passe ? Entrer votre adresse email pour recevoir un lien pour le réinitialiser.
							</small>
						</div>
						{{ form_start(requestForm) }}
						{{ form_row(requestForm.email) }}


						<button class="btn btn-secondary">Envoyer un email</button>
						{{ form_end(requestForm) }}
					</div>
				</div>
			</div>
		</div>
	</main>
{% endblock %}
