{% extends 'mascindye.html.twig' %}

{% block title %}Hello PanierController!
{% endblock %}

{% block body %}
	{# {{dump(panier)}} #}
	<div class="container">
		<div class="row text-uppercase text-center m-4">
			<h4>panier</h4>
		</div>
		<div class="row ">
			<div class="col-sm-12 col-md-10 col-md-offset-1 m-auto">
				<table class="table table-hover">
					<thead>
						<tr>
							<th>Produit</th>
							<th class="text-center">Taille</th>
							<th class="text-center">Quantité</th>
							<th class="text-center">Prix</th>
							<th class="text-center">Sous-total</th>
							<th class="text-center"></th>
						</tr>
					</thead>
					<tbody>
						{% for element in panier.lignes %}
							<tr>
								<td class="col-sm-8 col-md-6">
									<div class="media">
										<a class="thumbnail pull-left" href="#">
											<img class="media-object rounded " src="{{app_cdn}}{{element.produit.urlImage}} " style="width: 72px; height: 72px;">
										</a>
										<div class="media-body">
											<h4 class="media-heading fs-6">
												<a href="#">{{element.produit.nom}}</a>
											</h4>
											<span>Status:
											</span>
											<span class="text-success">
												<strong>En stock</strong>
											</span>
										</div>
									</div>
								</td>
								<td class="col-sm-1 col-md-1 text-center {# fw-bold #}">
									<strong>{{element.taille.taille}}
									</strong>
								</td>

								<td class="col-sm-1 col-md-1 text-center">
									<input type="email" class="form-control text-center" id="exampleInputEmail1" value="{{element.qt}} " disabled>
								</td>
								<td class="col-sm-1 col-md-1 text-center">
									<strong>{{element.produit.prix}}
										€</strong>
								</td>
								<td class="col-sm-1 col-md-1 text-center">
									<strong>{{element.totalligne}}
										€</strong>
								</td>
								<td class="col-sm-1 col-md-1 text-center">
									<a href="{{path('panier_remove',{id:element.produit.id,taille:element.taille.id})}}" class=" btn btn-danger btn-sm">
									<i class="fas fa-trash"></i>
									</a>
								</td>
							</tr>
						{% endfor %}
						<tr>
							<td colspan="5">
								<h5 class="text-center">Total :</h5>
							</td>
							<td class="text-primary text-center fw-bold">
								{{panier.totalcommande}}
								€
							</td>
						</tr>
						<tr>
							<td >
								<a href="{{path('category_parent',{slug:'collection-femme'})}}" type="button" class="btn btn-default border">
									<i class="fa fa-shopping-cart" aria-hidden="true"></i>Continuer votre shopping
								</a>
							</td>
							<td></td>
							<td></td>
							<td></td>
							<td></td>
							<td>
								<a href="{{path('app_commande')}}" type="button" class="btn btn-success">
									commander
								</a>
							</td>
						</tr>
					</tbody>
				</table>
			</div>
		</div>
	</div>
	{# {{dump()}} #}
{% endblock %}
